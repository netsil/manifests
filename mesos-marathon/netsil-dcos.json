{
  "id": "netsil",
  "cpus": 4,
  "mem": 12000,
  "disk": 0,
  "instances": 1,
  "acceptedResourceRoles": [
    "*"
  ],
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "zk_data",
        "mode": "RW",
        "persistent": {
          "size": 250
        }
      },
      {
        "containerPath": "/opt/netsil/lite/zookeeper/data",
        "hostPath": "zk_data",
        "mode": "RW"
      },
      {
        "containerPath": "mysql_data",
        "mode": "RW",
        "persistent": {
          "size": 250
        }
      },
      {
        "containerPath": "/var/lib/mysql",
        "hostPath": "mysql_data",
        "mode": "RW"
      },
      {
        "containerPath": "es_data",
        "mode": "RW",
        "persistent": {
          "size": 500
        }
      },
      {
        "containerPath": "/usr/share/elasticsearch/data",
        "hostPath": "es_data",
        "mode": "RW"
      },
      {
        "containerPath": "redis_data",
        "mode": "RW",
        "persistent": {
          "size": 500
        }
      },
      {
        "containerPath": "/var/lib/redis",
        "hostPath": "redis_data",
        "mode": "RW"
      },
      {
        "containerPath": "kafka-log-dir",
        "mode": "RW",
        "persistent": {
          "size": 500
        }
      },
      {
        "containerPath": "/opt/netsil/kafka/kafka-log-dir",
        "hostPath": "kafka-log-dir",
        "mode": "RW"
      },
      {
          "containerPath": "realtime-segments",
          "mode": "RW",
          "persistent": {
            "size": 500
          }
      },
      {
          "containerPath": "/opt/netsil/druid/realtime-segments",
          "hostPath": "realtime-segments",
          "mode": "RW"
      },
      {
        "containerPath": "ceph-data",
        "mode": "RW",
        "persistent": {
          "size": 500
        }
      },
      {
        "containerPath": "/var/lib/ceph-data",
        "hostPath": "ceph-data",
        "mode": "RW"
      },
      {
        "containerPath": "ceph-conf",
        "mode": "RW",
        "persistent": {
          "size": 500
        }
      },
      {
        "containerPath": "/etc/ceph",
        "hostPath": "ceph-conf",
        "mode": "RW"
      },
      {
        "containerPath": "licenses",
        "mode": "RW",
        "persistent": {
          "size": 10
        }
      },
      {
        "containerPath": "/opt/netsil/license-manager/licenses",
        "hostPath": "licenses",
        "mode": "RW"
      },
      {
        "containerPath": "indexCache",
        "mode": "RW",
        "persistent": {
          "size": 10
        }
      },
      {
        "containerPath": "/var/tmp/druid/indexCache",
        "hostPath": "indexCache",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "netsil/netsil:stable-1.1.3",
      "network": "BRIDGE",
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 30443,
          "protocol": "tcp"
        },
        {
          "containerPort": 2001,
          "hostPort": 2001,
          "protocol": "tcp"
        },
        {
          "containerPort": 2003,
          "hostPort": 2003,
          "protocol": "udp,tcp"
        }
      ],
      "privileged": false,
      "parameters": [],
      "forcePullImage": false
    }
  },
  "args":[
    "/root/startup.sh"
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "netsil",
    "DCOS_SERVICE_SCHEME": "http",
    "DCOS_SERVICE_PORT_INDEX": "0"
  },
  "residency": {
    "taskLostBehavior": "WAIT_FOREVER"
  },
  "upgradeStrategy": {
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
